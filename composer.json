{
    "name": "aoe/restler",
    "type": "typo3-cms-extension",
    "description": "A TYPO3-Extension, that integrates the popular PHP REST-framework Restler in TYPO3.",
    "homepage": "https://typo3.org/extensions/repository/view/restler",
    "support": {
        "issues": "https://github.com/AOEpeople/TYPO3_Restler/issues"
    },
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "AOE GmbH",
            "email": "dev@aoe.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "typo3/cms-core": ">=7.6.0",
        "luracast/restler": "3.0.0.20171013"
    },
    "require-dev": {
        "typo3/cms": "^7.6",
        "nimut/testing-framework": "2.0.0",
        "phpunit/phpunit": "^5.6",
        "phpunit/phpcov": "^3.1",
        "squizlabs/php_codesniffer": "2.3.*",
        "sebastian/phpcpd": "2.0.*",
        "phpmd/phpmd": "2.2.*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/AOEpeople/Restler.git"
        }
    ],
    "replace": {
        "restler": "*"
    },
    "keywords": [
        "TYPO3",
        "Restler",
        "REST",
        "API"
    ],
    "autoload": {
        "psr-4": {
            "Aoe\\Restler\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aoe\\Restler\\Tests\\": "Tests",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
        }
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/restler ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/restler"
        ],
        "test:unit": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.0-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    },
    "dist": {
        "url": "https://extranet.aoe.com/artifactory/congstar-composer-internal-local/aoe/restler/restler-build.552.zip",
        "type": "zip"
    }
}
